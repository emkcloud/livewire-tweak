{
    "name": "emkcloud/livewire-tweak",
    "description": "Tweaks and overrides for Livewire packages",
    "keywords": [
        "assets",
        "flux",
        "laravel",
        "livewire"
    ],
    "homepage": "https://github.com/emkcloud/livewire-tweak",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Massimo Della Rovere",
            "email": "dellarovere@duck.com",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Emkcloud\\LivewireTweak\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require": {
        "illuminate/support": "^12.0",
        "livewire/livewire": "^3.5.19"
    },
    "conflict": {
        "livewire/flux": ">=3.0"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Emkcloud\\LivewireTweak\\Providers\\LivewireTweakServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "livewire/flux": "^2.1",
        "laravel/pint": "^1.22",
        "pestphp/pest": "^3.8",
        "orchestra/testbench": "^10.2"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
